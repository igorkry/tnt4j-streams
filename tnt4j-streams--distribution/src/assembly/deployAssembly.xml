<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>${release.deploy.name}-deploy-asm</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory></baseDirectory>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <binaries>
                <outputDirectory></outputDirectory>
                <unpack>false</unpack>
                <!--outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping-->
                <dependencySets>
                    <dependencySet>
                        <useProjectArtifact>false</useProjectArtifact>
                        <useTransitiveDependencies>true</useTransitiveDependencies>
                        <outputDirectory>lib</outputDirectory>
                        <unpack>false</unpack>
                        <excludes>
                            <exclude>${project.groupId}:*:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
            <!-- NOTE: <sources> allows to copy anything from module dir to assembly -->
            <!-- module contents: samples, source/test/javadoc jars -->
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <!-- run scripts -->
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.*</include>
                        </includes>
                        <excludes>
                            <exclude>**/*.bat</exclude>
                            <exclude>**/*.sh</exclude>
                        </excludes>
                        <directory>samples</directory>
                    </fileSet>
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.bat</include>
                        </includes>
                        <directory>samples</directory>
                        <lineEnding>crlf</lineEnding>
                    </fileSet>
                    <fileSet>
                        <outputDirectory>samples</outputDirectory>
                        <includes>
                            <include>**/*.sh</include>
                        </includes>
                        <directory>samples</directory>
                        <fileMode>0777</fileMode>
                        <lineEnding>unix</lineEnding>
                    </fileSet>
                    <!-- produced jars -->
                    <fileSet>
                        <outputDirectory></outputDirectory>
                        <directory>${project.build.directory}</directory>
                        <includes>
                            <!--<include>*.jar</include>-->
                            <include>*-sources.jar</include>
                            <include>*-tests.jar</include>
                            <include>*-javadoc.jar</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>

    <fileSets>
        <!-- run scripts -->
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <excludes>
                <exclude>*.bat</exclude>
                <exclude>*.sh</exclude>
            </excludes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>*.bat</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <lineEnding>crlf</lineEnding>
        </fileSet>
        <fileSet>
            <directory>../bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0777</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!-- user defined property files -->
        <fileSet>
            <directory>../config</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-kafka/config</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-wmq/config</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../tnt4j-streams-ws/config</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>config</outputDirectory>
        </fileSet>
        <!-- static content -->
        <fileSet>
            <directory>../</directory>
            <includes>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>

        <!-- JavaDocs -->
        <!--<fileSet>-->
        <!--<directory>../${project.build.directory}</directory>-->
        <!--<includes>-->
        <!--<include>*-javadoc.*</include>-->
        <!--</includes>-->
        <!--<outputDirectory>docs</outputDirectory>-->
        <!--</fileSet>-->
    </fileSets>
</assembly>