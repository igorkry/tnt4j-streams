    <!--<property name="FileName" value="./tnt4j-streams-core/samples/collectd-json/stats.json"/>-->
    <!--&lt;!&ndash;<property name="Port" value="9595"/>&ndash;&gt;-->

    <!--<parser-ref name="CollectdReqBodyParser"/>-->
    <!--</stream>-->
</tnt-data-source>
